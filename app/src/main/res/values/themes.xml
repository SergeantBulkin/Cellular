<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cellular" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--Navigation bar and divider color-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Cellular.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cellular.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cellular.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <style name="ListItemText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/merriweather_regular</item>
    </style>

    <style name="CardViewStroke">
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppBarTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">12dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">12dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="RadioButtonStyle">

    </style>

    <style name="AppBarBackgroundColor">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CardBackgroundColor">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/textInputLayout</item>
    </style>
</resources>